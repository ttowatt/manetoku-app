<%= render "admins/header"%>
<div class="container" style="margin-top:166px;">
  <h2 class="text-center mb-4">コメント一覧</h2>
  <div class="row justify-content-center">
    <% @comments.each do |comment| %>
      <div class="col-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center">
            <%= link_to comment.user.username, admins_user_path(comment.user) %>
            <p class="mb-0"><%= comment.body %></p>
            <%= link_to "削除", admins_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- ページネーション -->
<div class="pagination">
  <%= paginate @comments %>
</div>
