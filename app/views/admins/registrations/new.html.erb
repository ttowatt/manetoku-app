<div class="container py-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

    <div class="row justify-content-center">
      <div class="col-8 mb-4">
        <div class="card  shadow-sm">
          <div class="card-header card-header-color mb-5">
            <h1 class="mb-0 text-center font-weight-bold">新規登録ページ</h1>
          </div>
          <div class="card-body text-center">
            <h3 class="card-title"><%= f.label :password %></h3>
              <% if @minimum_password_length %>
              <em>(英数字 <%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            <p class="card-text"><%= f.password_field :password, autocomplete: "new-password", class:"form-control w-50 mx-auto" %></p>

            <%= f.label :password_confirmation, "パスワード確認" %>
            <p class="card-text"><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-50 mx-auto" %></p>
            
            <h3 class="card-title"><%= f.label :email %></h3>
            <p class="card-text"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-50 mx-auto" %></p>
            
            <div class="actions mb-2">
              <%= f.submit "新規登録", class:"btn btn-primary" %>
              <%= render "admins/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>