<%= render "admins/header" %>
<h2>会員一覧</h2>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td>
          <%= link_to "詳細", admins_user_path(user) %>
          <%= link_to "削除", admins_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>