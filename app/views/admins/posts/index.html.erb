<%= render "admins/header" %>
<h2>投稿一覧</h2>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to "詳細", admins_post_path(post) %>
          <%= link_to "削除", admins_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>