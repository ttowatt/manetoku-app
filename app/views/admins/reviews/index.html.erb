<%= render "admins/header" %>
<div class="container" style="margin-top:166px;">
  <h2 class="text-center mb-4">評価一覧</h2>
  <div class="row justify-content-center">
    <% @reviews.each do |review| %>
      <div class="col-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center">
            <%= link_to review.user.username, admins_user_path(review.user) %>
            <p class="btn btn-success"><%= review.post.category %></p>
            <%= review.post.title %>
            <% 1.upto(5) do |i| %>
              <% if i <= review.star.to_i %>
                <i class="fa-solid fa-star" style="color: gold;"></i>
              <% else %>
                <i class="fa-regular fa-star" style="color: #ccc;"></i>
              <% end %>
            <% end %>
            <%= truncate(review.body, length: 10) %>
            <%= link_to "詳細", admins_review_path(review), class: "btn btn-sm btn-primary" %>
            <%= link_to "削除", admins_review_path(review), 
                      method: :delete, 
                      data: { confirm: "本当に削除しますか？" }, 
                      class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- ページネーション -->
<div class="pagination">
  <%= paginate @reviews %>
</div>