<%= render "public/header1" %>
<div class="container d-flex justify-content-center" style="margin-top:166px;">
  <%= form_with model: @expense, url: public_expense_path(@expense), local: true do |f| %>
    <% if @expense.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@expense.errors.count, "件のエラー") %>があります：</h4>
        <ul>
          <% @expense.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card border-dark", style="width: 400px;">
      <div class="card-header text-center card-header-color">
        <h1 class="mb-0 font-weight-bold">支出の編集</h1>
      </div>
      <div class="card-body text-center">
        <h3 class="card-title"><%= f.label :expense_date, "支出日" %></h3>
        <p class="card-text"><%= f.date_field :expense_date, class:"form-control w-50 mx-auto" %></p>
        <h3 class="card-title"><%= f.label :amount, "金額" %></h3>
        <p class="card-text">
          <%= f.text_field :amount, inputmode: "numeric", pattern: "[0-9]*", class:"form-control w-50 mx-auto"  %>
        </p>
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", public_period_path(@expense.period_id), class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>