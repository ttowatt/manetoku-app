<%= render "public/header1" %>
<div class="container">
  <%= form_with model: @expense, url: public_expense_path(@expense), local: true do |f| %>
    <% if @expense.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@expense.errors.count, "件のエラー") %>があります：</h4>
        <ul>
          <% @expense.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col">
        <%= f.label :expense_date, "支出日" %>
        <%= f.date_field :expense_date %><br>
        <%= f.label :amount, "金額" %>
        <%= f.text_field :amount, inputmode: "numeric", pattern: "[0-9]*" %> 円<br>
        <%= f.submit "更新", class: "btn btn-primary mt-2" %>
      </div>
    </div>
  <% end %>
  <%= link_to "戻る", public_period_path(@expense.period_id), class: "btn btn-secondary" %>
</div>