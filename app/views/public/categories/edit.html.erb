<%= render "public/header1" %>
<div class="container py-5 d-flex justify-content-center">
  <%= form_with model: @category, url: public_category_path(@category), local: true do |f| %>
    <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@category.errors.count, "件のエラー") %>があります：</h4>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card border-dark", style="width: 400px;">
      <div class="card-header text-center card-header-color">
        <h1 class="mb-0 font-weight-bold">カテゴリの編集</h1>
      </div>
      <div class="card-body text-center">
        <h3 class="card-title"><%= f.label :category_name, "カテゴリ名" %></h3>
        <p class="card-text"><%= f.text_field :category_name, class:"form-control w-50 mx-auto" %></p>
        <h3 class="card-title"><%= f.label :budget, "予算" %></h3>
        <p class="card-text">
          <%= f.text_field :budget, inputmode: "numeric", pattern: "[0-9]*", class:"form-control w-50 mx-auto" %>
        </p>
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", public_periods_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>