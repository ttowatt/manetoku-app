  commentLikeElement.innerHTML = `<%= j(render 'public/comments/comment_like', comment: @comment) %>`;
}
document.getElementById("comment-like-<%= @comment.id %>").innerHTML = `
  <%= j(render partial: 'public/comments/comment_like', locals: { comment: @comment }) %>
`;