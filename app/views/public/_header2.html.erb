<!-- 節約術SNSのヘッダー -->
<header class="fixed-top d-flex justify-content-between header-footer-color">
  <nav class="navbar navbar-expand-lg navbar-light ">

    <!-- ハンバーガーボタン -->
    <div class="d-flex align-items-center">
      <button class="navbar-toggler mr-4" type="button" data-toggle="collapse" data-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- 検索フォーム -->
      <%= form_with url: public_search_path, method: :get, local: true, class: "d-flex" do |f| %>
        <%= text_field_tag :keyword, params[:keyword], placeholder: "キーワードを入力", class: "form-control me-2" %>
        
        <%= select_tag :model, options_for_select([["投稿", "post"], ["ユーザー", "user"]], params[:model]), class: "form-select me-2" %>
      
        <%= f.submit "検索", class: "btn btn-outline-primary" %>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "アバウト", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "家計簿", top_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "投稿一覧", public_posts_path, class: "nav-link" %></li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>

  <nav class="navbar">
    <div>
      <ul class="navbar-nav d-flex flex-row">
        <li class="nav-item mr-4">
          <%= link_to public_notifications_path, class: "nav-link" do %>
            <% if @unread_notifications.present? %>
              <!-- 未読通知あり → 震えるベル（ -->
              <i class="fa-solid fa-bell fa-shake fa-2x"></i>
            <% else %>
              <!-- 未読通知なし → 通常ベル-->
              <i class="fa-regular fa-bell fa-2x"></i>
            <% end %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to '<i class="fa-solid fa-circle-user fa-2x"></i>'.html_safe, public_user_path(current_user), class: "nav-link" %>
        </li>
      </ul>
    </nav>
</header>
<div>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</div>



