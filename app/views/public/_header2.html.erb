<!-- 節約術SNSのヘッダー -->
<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

  <!-- ハンバーガーボタン -->
    <div class="d-flex align-items-center">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

  <!-- 検索フォーム -->
      <%= form_with url: public_search_path, method: :get, local: true, class: "d-flex" do |f| %>
        <%= text_field_tag :keyword, params[:keyword], placeholder: "キーワードを入力", class: "form-control me-2" %>
        
        <%= select_tag :model, options_for_select([["投稿", "post"], ["ユーザー", "user"]], params[:model]), class: "form-select me-2" %>
      
        <%= f.submit "検索", class: "btn btn-outline-success" %>
      <% end %>
    </div>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "家計簿", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "投稿一覧", public_posts_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "アバウト", about_path, class: "nav-link" %></li>
        </ul>
      </div>

        <ul class="navbar-nav d-flex flex-row align-item-center">
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to '<i class="fa-regular fa-bell"></i>'.html_safe, public_notifications_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to '<i class="fa-solid fa-circle-user"></i>'.html_safe, public_mypage_path, class: "nav-link" %>
          </li>
        </ul>
    </nav>
</header>
<div>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</div>



