<%= render "public/header2" %>
<div class="container" style="margin-top:166px;">
  <%= link_to new_post_path, class: "btn btn-primary fixed-top-right" do %>
    <i class="fa-solid fa-plus fa-2x"></i>
  <% end %>
  <h1 class="mb-3 text-center">投稿一覧</h1>
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-8 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="mb-1 btn btn-success"><%= post.category %></p>
                <% if post.user.present? %>
                  <%= link_to post.user.username, user_path(post.user) %>
                <% else %>
                  <span class="text-muted">退会したユーザー</span>
                <% end %>
              </div>
              <div>
                <% if post.user == current_user %>
                  <%= link_to "削除", post_path(post),
                              method: :delete,
                              data: { confirm: "このレビューを削除しますか？" },
                              class: "btn btn-sm btn-danger" %>
                <% end %>
              </div>
            </div>
            <div>
              <%= l post.created_at %>
            </div>
          </div>
          <div class="card-image">
            <% if post.post_image.attached? %>
              <%= image_tag post.post_image, class: "card-img-size", alt: "投稿画像" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "card-img-size", alt: "画像なし" %>
            <% end %>
          </div>
      
          <div class="card-body text-left">
            
            <h5 class="card-title mb-2"><%= post.title %></h5>
            <p class="card-text">
              <%= truncate(post.body, length: 11) %>
              <%= link_to "詳細を見る", post_path(post), class:"btn btn-link" %>
            </p>
            <div class="d-flex align-items-center my-3">
            
              <%= render 'public/posts/post_like', post: post %>

              <% avg_star = post.reviews.average(:star) || 0 %>
              <p class="mb-0 mr-3 d-flex align-items-center">
                <i class="fa-solid fa-star star-color me-1"></i>
                <%= avg_star.round(1) %> / 5 (<%= post.reviews.count %>件)
              </p>

              <%= link_to post_comments_path(post), class: "ml-3 text-secondary d-flex align-items-center" do %>
                <i class="fa-regular fa-comment fa-2x"></i>
              <% end %>
            </div>
            <% if post.user != current_user %>
              <%= link_to "評価する", new_post_review_path(post), class:"btn btn-primary me-2" %>
            <% end %>
            <%= link_to "評価一覧", post_reviews_path(post), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- ページネーション -->
<div class="pagination">
  <%= paginate @posts %>
</div>