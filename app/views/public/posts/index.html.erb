<%= render "public/header2" %>
<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <div class="card w-75">
    <div class="card-header">
      <h2><%= post.user.username %></h2>
      <h4><%= post.category %> <%= post.title %></h4>
    </div>
    <div class="card-img">
      <% if post.post_image.attached? %>
        <%= image_tag post.post_image, size: "300x300" %>
      <% else %>
        <%= image_tag "no_image.jpg", size: "300x300" %>
      <% end %>
    </div>
    <div class="card-body d-flex">
      <p><i class="fa-light fa-heart"></i><%= post.likes.count %></p>
      <p>
        <%= link_to public_post_comments_path(post) do %>
          <i class="fa-regular fa-comment"></i>
        <% end %>
      </p>
    </div>
  </div>
<% end %>