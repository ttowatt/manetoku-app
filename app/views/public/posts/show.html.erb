<%= render "public/header2" %>
<h1>投稿詳細</h1>
<div class="card w-75">
  <div class="card-header">
    <h2><%= link_to @post.user.username, public_user_path(@post.user) %></h2>
    <h4><%= @post.category %> <%= @post.title %></h4>
  </div>

  <div class="card-img">
    <% if @post.post_image.attached? %>
      <%= image_tag @post.post_image, size: "300x300" %>
    <% else %>
      <%= image_tag "no_image.jpg", size: "300x300" %>
    <% end %>
  </div>

  <div class="card-body d-flex">
    <!-- いいねボタンと数 -->
        <%= render 'public/posts/post_like', post: @post %>

    <p>
      <%= link_to public_post_comments_path(@post) do %>
        <i class="fa-regular fa-comment"></i>
      <% end %>
    </p>

    <% avg_star = @post.reviews.average(:star) || 0 %>
    <p><i class="fa-solid fa-star"></i> <%= avg_star.round(1) %> / 5 (<%= @post.reviews.count %>件)</p>

    <% if @post.user != current_user %>
      <%= link_to "評価する", new_public_post_review_path(@post) %>
      <%= link_to "評価一覧", public_post_reviews_path(@post) %>
    <% end %>
  </div>
</div>
