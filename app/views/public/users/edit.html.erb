<%= render "public/header2" %>

<%= form_with model: @user, url: public_user_path(@user), method: :patch, local: true, html: { multipart: true } do |f| %>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "件のエラー") %>があります：</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <%= image_tag @user.get_profile_image, size:'100x100' %>
    <div class="col">
      <%= f.label :profile_image, "プロフィール画像を変更" %><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class= "field">
    <%= f.label :phone_number, "電話番号" %><br>
    <%= f.text_field :phone_number, placeholder: "ハイフンなし" %>
  </div>

  <div class= "field">
    <%= f.label :last_name, "姓"%><br>
    <%= f.text_field :last_name, placeholder: "田中" %>
  </div>

  <div class= "field">
    <%= f.label :first_name, "名"%><br>
    <%= f.text_field :first_name, placeholder: "花子" %>
  </div>

  <div class= "field">
    <%= f.label :last_name_kana, "姓(カナ)" %><br>
    <%= f.text_field :last_name_kana, placeholder: "タナカ" %>
  </div>

  <div class= "field">
    <%= f.label :first_name_kana, "名(カナ)" %><br>
    <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
  </div>

  <div class= "field">
    <%= f.label :username, "ユーザー名(表示名)" %><br>
    <%= f.text_field :username %>
  </div>

  <div class= "field">
    <%= f.label :introduction, "自己紹介文" %><br>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>

  <%= link_to "退会する", public_withdraw_confirm_path, class: "btn btn-danger" %>
<% end %>