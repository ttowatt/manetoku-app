<!-- 家計簿使用時のヘッダー -->

<header class="fixed-top d-flex justify-content-between header-footer-color">
  <nav class="navbar navbar-expand-lg navbar-light ">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "アバウト", about_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "家計簿", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "投稿一覧", public_posts_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "履歴一覧", public_periods_path, class: "nav-link" %></li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
  <nav class="navbar">
    <div>
      <ul class="navbar-nav d-flex flex-row">
        <li class="nav-item mr-4">
          <%= link_to public_notifications_path, class: "nav-link" do %>
            <i class="fa-regular fa-bell fa-2x"></i>

            <% if @unread_notifications.present? %>
                <span class="notification-badge"></span>
            <% end %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to '<i class="fa-solid fa-circle-user fa-2x"></i>'.html_safe, public_user_path(current_user), class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
</header>
<div>
  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</div>

