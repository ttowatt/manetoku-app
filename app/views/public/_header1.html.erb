<!-- 家計簿使用時のヘッダー -->

<header class="fixed-top d-flex justify-content-between header-footer-color" >
  <nav class="navbar navbar-expand-lg navbar-light ">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "アバウト", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "家計簿", top_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "投稿一覧", public_posts_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "履歴一覧", public_periods_path, class: "nav-link" %></li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
  <nav class="navbar">
    <div>
      <ul class="navbar-nav d-flex flex-row">
        <li class="nav-item  dropdown mr-4">
          <a class="nav-link  id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-regular fa-bell fa-2x"></i>
            <span class="badge badge-danger"><%= current_user.notifications.where(read: false).count %></span>
          </a>
          <div class="dropdown-menu menu-position" aria-labelledby="dropdownMenuButton">
            <% if current_user.notifications.where(read: false).any? %>
              <small class="dropdown-item disabled">直近5件の未読の通知を表示しています</small>
              <% current_user.notifications.where(read: false).limit(5).order(created_at: :desc).each do |notification| %>
                <%= link_to notification_message(notification), public_notification_path(notification), method: :patch, class: "dropdown-item text-info" %>
              <% end %>
            <% else %>
              <span class="dropdown-item disabled">未読の通知はありません</span>
            <% end %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to '<i class="fa-solid fa-circle-user fa-2x"></i>'.html_safe, public_user_path(current_user), class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
</header>
<div>
  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</div>

