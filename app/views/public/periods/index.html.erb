<%= render "public/header1" %>
<h1>履歴</h1>
<% @periods.each do |period| %>
  <div class="period">
    <h3><%= period.start_date %> 〜 <%= period.end_date %></h3>
    <% if period.categories.any? %>
      <ul>
        <% period.categories.each do |category| %>
          <li>
            <%= link_to category.category_name, public_period_path(period), class:"btn btn-primary" %>
            <%= link_to "編集", edit_public_category_path(category) %>
            <%= link_to "削除", public_category_path(category), method: :delete,
                            data: {confirm: "本当に削除しますか？"},
                            class:"btn btn-danger" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>