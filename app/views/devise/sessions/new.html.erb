<div class="container">
  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <div class="py-5 d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card border-dark", style="width: 400px;">
        <div class="card-header text-center card-header-color">
          <h1 class="mb-0 font-weight-bold">ログインページ</h1>
        </div>
        <div class="card-body text-center">
          <h3 class="card-title"><%= f.label :email, "メールアドレス" %></h3>
          <p class="card-text"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
          <h3 class="card-title"><%= f.label :password, "パスワード" %></h3>
          <p class="card-text"><%= f.password_field :password, autocomplete: "current-password" %></p>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "パスワードを記憶する" %>
            </div>
          <% end %>

          <div class="actions mb-2">
            <%= f.submit "ログイン", class:"btn btn-outline-primary" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>