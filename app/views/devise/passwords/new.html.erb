<div class="container py-5 d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="card border-dark", style="width: 400px;">
      <div class="card-header text-center card-header-color">
        <h1 class="mb-0 font-weight-bold">パスワード再設定</h1>
      </div>
      <div class="card-body text-center">
        <p class="card-text">パスワード再設定用のメールアドレスを送信します。<br>
          まねトク会員に登録されたメールアドレスを入力<br>
          してください。
        </p>
    
        <h3 class="card-title"><%= f.label :email, "メールアドレス" %></h3>
        <p class="card-text"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
        <div class="actions">
          <%= f.submit "パスワード再設定メールを送信", class:"btn btn-outline-primary" %>
        </div>
        <div class="mt-3 d-flex justify-content-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


