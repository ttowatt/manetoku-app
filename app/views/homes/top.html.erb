<%= render "public/header1" %>

<div class="container">
  <!-- 年月表示 -->
  <div class="row">
    <%= @now.strftime("%Y年%-m月") %>
  </div>

  <div class="row">
    <%= form_with model: @category, url: public_categories_path, local: true do |f| %>
      <div class="col-4">
        <%= f.label :name, "カテゴリ名" %><br>
        <%= f.text_field :name %><br>

        <%= f.label :budget, "予算/残高" %><br>
        <%= f.number_field :budget, min: 0 %> 円<br><br>

        <%= f.label :expenses, "支出" %><br>
        <div id="expenses">
          <%= f.fields_for :expenses do |e| %>
            <div class="expense-fields" style="margin-bottom: 10px;">
              <%= e.label :expense_date, "支出日" %>
              <%= e.date_field :expense_date %>

              <%= e.label :amount, "金額" %>
              <%= e.number_field :amount, min: 0 %> 円
              <%= f.submit "登録", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
